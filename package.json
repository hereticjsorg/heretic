    "description": "Heretic",
    "main": "dist/server.js",
    "imports": {
        "#core/*": "./src/core/*",
        "#components/*": "./src/core/components/*",
        "#build/*": "./.build/*",
        "#lib/*": "./src/core/lib/*",
        "#bin/*": "./src/bin/*",
        "#site/*": "./site/*",
        "#etc/*": "./site/etc/*",
        "#src/*": "./src/*",
        "#root/*": "./*"
    },
    "scripts": {
        "install-modules": "npm install && npm i --include=optional sharp",
        "configure": "node src/bin/configure",
        "cli": "node src/bin/cli",
        "cli-interactive": "node src/bin/cli-interactive",
        "server": "node dist/server",
        "backup": "node src/bin/backup",
        "restore": "node src/bin/restore",
        "update": "node src/bin/update",
        "cleanup": "node src/bin/cleanup",
        "build": "node src/bin/build",
        "build-dev": "webpack --mode development",
        "build-production": "webpack --mode production",
        "test": "jest --runInBand",
        "pretty-src": "prettier --write \"./src/**/*.{js,ts,json,scss,css}\"",
        "pretty-site": "prettier --write \"./site/**/*.{js,ts,json,scss,css}\""
    },
    "keywords": [
        "heretic",
        "marko",
        "bulma",
