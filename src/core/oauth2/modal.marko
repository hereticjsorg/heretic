<!DOCTYPE html>
<html class="">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title/>
        <style type="text/css">
            html,
            body {
                height: 100%;
            }

            body {
                background: #fff;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .spinner {
                width: 200px;
                height: 200px;
                position: relative;
                animation: spin 5s linear infinite;
                background: white;
                border-radius: 300px;
                .quadrant {
                    position: absolute;
                    top: 0%;
                    left: 0%;
                    width: 100%;
                    height: 100%;
                    mix-blend-mode: lighten;
                    opacity: .5;
                    z-index: 10;
                    &:after {
                    content: "";
                    color: none;
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    border-radius: 100%;
                    }
                    &:nth-child(1) {
                        animation: slide_horiz_neg 4s linear alternate infinite;
                        &:after {
                            background: #7bd4fa;
                        }
                    }
                    &:nth-child(2) {
                        animation: slide_vert_neg 3s linear alternate infinite;
                        &:after {
                            background: #f4d55e;
                        }
                    }
                    &:nth-child(3) {
                        animation: slide_horiz_pos 4.5s linear alternate infinite;
                        &:after {
                            background: #f27f4f;
                        }
                    }
                    &:nth-child(4) {
                        animation: slide_vert_pos 3.5s linear alternate infinite;
                        &:after {
                            background: #72f87d;
                        }
                    }
                }
            }

            @keyframes spin {
                to {
                    transform: rotate(360deg);
                }
            }

            @keyframes slide_vert_pos {
                0% {
                    transform: translateY(3%);
                }
                100% {
                    transform: translateY(5%);
                }
            }

            @keyframes slide_vert_neg {
                0% {
                    transform: translateY(-5%);
                }
                100% {
                    transform: translateY(-3%);
                }
            }

            @keyframes slide_horiz_pos {
                0% {
                    transform: translateX(3%);
                }
                100% {
                    transform: translateX(5%);
                }
            }

            @keyframes slide_horiz_neg {
                0% {
                    transform: translateX(-5%);
                }
                100% {
                    transform: translateX(-3%);
                }
            }
        </style>
    </head>
    <body>
        <div class="spinner">
            <div class="quadrant"/>
            <div class="quadrant"/>
            <div class="quadrant"/>
            <div class="quadrant"/>
        </div>
        <script type="text/javascript">
            setTimeout(() => {
                if (!window.opener) {
                    return;
                }
                var token = "${input.token}" || null;
                window.opener.postMessage({ token });
                window.close();
            }, 1000);
        </script>
    </body>
</html>
