                }
            }
            @keyframes hr-glitch-skew {
                0% {
                    transform: skew(-3deg)
                }
                10% {
                    transform: skew(3deg)
                }
                20% {
                    transform: skew(3deg)
                }
                30% {
                    transform: skew(3deg)
                }
                40% {
                    transform: skew(3deg)
                }
                50% {
                    transform: skew(2deg)
                }
                60% {
                    transform: skew(4deg)
                }
                70% {
                    transform: skew(5deg)
                }
                80% {
                    transform: skew(-2deg)
                }
                90% {
                    transform: skew(-1deg)
                }
                100% {
                    transform: skew(-1deg)
                }
            }
            @keyframes hr-animate-bg {
                0% {
                    background-position: 0% 50%;
                }
                50% {
                    background-position: 100% 50%;
                }
                100% {
                    background-position: 0% 50%;
                }
            }
        </style>
    </head>
    <body class="hr-e-int-body">
        <div class="hr-e-int-wrap">
            <div class="hr-glitch" data-text=input.message>${input.message}</div>
