<if(input.type === "line")>
    <span
        class="hr-hld-loader-line"
        id=state.cid
        style={
            opacity: "0"
        }/>
</if>
<if(input.type === "progress")>
    <span
        class="hr-hld-loader-progress"
        id=state.cid
        style={
            opacity: "0"
        }/>
</if>
<if(!input.type)>
    <div class="hr-hld-loader-spinner"/>
</if>
