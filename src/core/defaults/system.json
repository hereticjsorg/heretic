{
    "id": "heretic",
    "secret": "",
    "server": {
        "ip": "127.0.0.1",
        "port": 3001,
        "static": true,
        "trustProxy": true,
        "ignoreTrailingSlash": true
    },
    "mongo": {
        "url": "mongodb://127.0.0.1:27017",
        "dbName": "heretic",
        "options": {
            "useUnifiedTopology": true,
            "connectTimeoutMS": 5000,
            "keepAlive": true,
            "useNewUrlParser": true
        }
    },
    "redis": {
        "enabled": false,
        "host": "127.0.0.1",
        "port": 6379
    },
    "cookieOptions": {
        "expires": 604800,
        "path": "/",
        "domain": "",
        "secure": null,
        "sameSite": null
    },
    "log": {
        "level": "info"
    },
    "rateLimit": {
        "enabled": false,
        "ban": false,
        "global": {
            "max": 100,
            "ban": 1000,
            "timeWindow": 10000
        },
        "whiteList": [],
        "blackList": [],
        "addHeaders": {
            "x-ratelimit-limit": true,
            "x-ratelimit-remaining": true,
            "x-ratelimit-reset": true,
            "retry-after": true
        }
    },
    "systemTempDir": true
}
